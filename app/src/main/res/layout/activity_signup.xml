<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:id="@+id/lin_lay"
    android:orientation="vertical"
    android:weightSum="1"
    android:background="@drawable/mainbackground">


    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/orange"
        android:textSize="@dimen/xxlarge"
        android:textAlignment="center"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="10dp"

        android:text="@string/signup_text1" />

    <EditText
        android:id="@+id/etFullname"
        android:layout_width="260dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_weight="0.1"
        android:ems="10"
        android:inputType="textPersonName"
        android:hint="@string/signup_text2"
        android:backgroundTint="@color/gray"
        android:textSize="@dimen/medium"
        android:textColor="@color/white"
        android:textColorHint="@color/white"/>
    <EditText
        android:id="@+id/etUsername"
        android:layout_width="260dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_weight="0.1"
        android:ems="10"
        android:inputType="text"
        android:hint="Username"
        android:backgroundTint="@color/gray"
        android:textSize="@dimen/medium"
        android:textColor="@color/white"
        android:textColorHint="@color/white"/>
    <EditText
        android:id="@+id/etEmail"
        android:layout_width="260dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_weight="0.1"
        android:ems="10"
        android:inputType="textEmailAddress"
        android:hint="@string/signup_text3"
        android:backgroundTint="@color/gray"
        android:textSize="@dimen/medium"
        android:textColor="@color/white"
        android:textColorHint="@color/white"/>
    <EditText
        android:id="@+id/etMobile"
        android:layout_width="260dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_weight="0.1"
        android:ems="10"
        android:inputType="text"
        android:hint="@string/signup_text4"
        android:backgroundTint="@color/gray"
        android:textSize="@dimen/medium"
        android:textColor="@color/white"
        android:textColorHint="@color/white"/>
    <EditText
        android:id="@+id/etPassword"
        android:layout_width="260dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_weight="0.1"
        android:ems="10"
        android:inputType="textPassword"
        android:hint="@string/signup_text5"
        android:backgroundTint="@color/gray"
        android:textSize="@dimen/medium"
        android:textColor="@color/white"
        android:textColorHint="@color/white"/>
    <EditText
        android:id="@+id/etConfirmPassword"
        android:layout_width="260dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_weight="0.1"
        android:ems="10"
        android:inputType="textPassword"
        android:hint="@string/signup_text6"
        android:backgroundTint="@color/gray"
        android:textSize="@dimen/medium"
        android:textColor="@color/white"
        android:textColorHint="@color/white"/>
    <Button
        android:id="@+id/btnNext"
        android:layout_width="260dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="@string/signup_text7"
        android:background="@drawable/btn_primary"
        android:layout_marginTop="10dp"
        android:textColor="@color/orange"
        android:textSize="@dimen/medium"
        android:layout_weight="0.01" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:layout_marginTop="10dp">
        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:background="@drawable/hexagon_white"/>
        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:background="@drawable/hexagon_gray"/>
    </LinearLayout>
</LinearLayout>