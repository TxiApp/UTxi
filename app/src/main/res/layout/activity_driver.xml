<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:id="@+id/lin_lay"
    android:orientation="vertical"
    android:weightSum="1"
    android:background="@drawable/mainbackground">

    <TextView
        android:id="@+id/nameText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:textSize="@dimen/xlarge"
        android:layout_marginTop="5dp"
        android:textAlignment="center"
        android:text="John Doe" />
    <TextView
        android:id="@+id/companyText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/orange"
        android:textSize="@dimen/medium"
        android:textAlignment="center"
        android:text="All Star Taxi Company Inc." />
    <ImageView
        android:id="@+id/driverImage"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:scaleType="fitXY"
        android:layout_marginTop="5dp"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/image_border"
        android:src="@drawable/profile2" />
    <TextView
        android:id="@+id/taxiText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:textSize="@dimen/large"
        android:textAlignment="center"
        android:text="Toyota RAV4 2016" />
    <TextView
        android:id="@+id/taxiNumberText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/orange"
        android:textSize="@dimen/medium"
        android:textAlignment="center"
        android:text="465E5GA" />

    <ImageView
        android:id="@+id/taxiImage"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:scaleType="fitXY"
        android:layout_marginTop="5dp"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/image_border"
        android:src="@drawable/taxi2" />
    <RatingBar
        android:theme="@style/RatingBar"
        android:scaleX="0.5"
        android:scaleY="0.5"
        android:rating="3"
        android:stepSize="0"
        android:numStars="5"
        android:layout_width="wrap_content"
        android:layout_gravity="center"
        android:layout_height="wrap_content" />
    <Button
        android:id="@+id/book_btn"
        android:layout_width="220dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Book Now"
        android:background="@drawable/btn_primary"
        android:layout_marginTop="10dp"
        android:textColor="@color/white"
        android:textSize="12dp"
        android:onClick="gobook"/>
    <Button
        android:id="@+id/back_btn"
        android:layout_width="220dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Back to Map"
        android:background="@drawable/btn_primary"
        android:layout_marginTop="10dp"
        android:textColor="@color/white"
        android:textSize="12dp"
        android:onClick="goback" />

</LinearLayout>