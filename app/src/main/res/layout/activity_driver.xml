<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:id="@+id/lin_lay"
    android:orientation="vertical"
    android:weightSum="1"
    android:background="@drawable/mainbackground">

    <TextView
        android:id="@+id/tvName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:textSize="@dimen/xlarge"
        android:layout_marginTop="5dp"
        android:textAlignment="center"
        android:text="John Doe" />
    <TextView
        android:id="@+id/tvCompany"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/orange"
        android:textSize="@dimen/medium"
        android:textAlignment="center"
        android:text="All Star Taxi Company Inc." />

    <ImageView
        android:id="@+id/ivImage"
        android:layout_width="95dp"
        android:layout_height="90dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="5dp"
        android:background="@drawable/image_border"
        android:scaleType="fitXY" />

    <TextView
        android:id="@+id/tvModel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:textSize="@dimen/large"
        android:textAlignment="center"
        android:text="Toyota RAV4 2016" />
    <TextView
        android:id="@+id/tvPlate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/orange"
        android:textSize="@dimen/medium"
        android:textAlignment="center"
        android:text="465E5GA" />

    <ImageView
        android:id="@+id/ivVehicleImage"
        android:layout_width="95dp"
        android:layout_height="90dp"
        android:scaleType="fitXY"
        android:layout_marginTop="5dp"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/image_border"
        android:src="@drawable/taxi2" />
    <RatingBar
        android:theme="@style/RatingBar"
        android:scaleX="0.5"
        android:scaleY="0.5"
        android:rating="5"
        android:stepSize="0"
        android:numStars="5"
        android:layout_width="wrap_content"
        android:layout_gravity="center"
        android:layout_height="wrap_content" />
    <EditText
        android:id="@+id/etDestination"
        android:layout_width="220dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:hint="Destination"
        android:textColor="@color/white"
        android:textColorHint="@color/white"
        android:backgroundTint="@color/gray"
        />
    <Button
        android:id="@+id/btnBook"
        android:layout_width="220dp"
        android:layout_height="30dp"
        android:layout_gravity="center"
        android:text="Book Now"
        android:background="@drawable/btn_primary"
        android:textColor="@color/white"
        android:textSize="12dp"
        android:onClick="gobook"/>
    <Button
        android:id="@+id/btnBack"
        android:layout_width="220dp"
        android:layout_height="30dp"
        android:layout_gravity="center"
        android:text="Back to Map"
        android:background="@drawable/btn_primary"
        android:layout_marginTop="10dp"
        android:textColor="@color/white"
        android:textSize="12dp"
        android:onClick="goback" />

</LinearLayout>